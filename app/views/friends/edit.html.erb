<h1>Edit Friend</h1>

<%= render "form", friend: @friend %>

<br>

<div>
  <%= link_to "Show this friend", @friend, class:"btn btn-dark" %>
  <%= link_to "Delete", friend_path(@friend), data:{turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-danger" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
</div>
